/dts-v1/;
#include <nordic/nrf52833.dtsi>

/ {
	model = "NRF52833 DK with DW3210 UWB";
	compatible = "nordic,nrf52833-dk";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};
		led1: led_1 {
			gpios = <&gpio0 14 GPIO_ACTIVE_HIGH>;
			label = "Red LED";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 11 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
		};
		button1: button_1 {
			gpios = <&gpio0 12 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 1";
		};
	};

	/* DW3210 UWB Transceiver Configuration */
	dw3210 {
		compatible = "qorvo,dw3210";
		label = "dw3210";
		
		/* Pin Configuration */
		irq-gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;
		cs-gpios = <&gpio0 31 GPIO_ACTIVE_LOW>;
		
		/* SPI Interface */
		spi-parent = &spi0;
		spi-frequency = <8000000>;
	};
};

&uart0 {
	compatible = "nordic,nrf-uart";
	current-speed = <115200>;
	status = "okay";
	tx-pin = <6>;
	rx-pin = <8>;
};

&spi0 {
	compatible = "nordic,nrf-spi";
	status = "okay";
	sck-pin = <27>;
	mosi-pin = <26>;
	miso-pin = <29>;
};

&gpio0 {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x0000F000>;
		};

		code_partition: partition@f000 {
			label = "code";
			reg = <0x0000F000 0x000F1000>;
		};

		storage_partition: partition@100000 {
			label = "storage";
			reg = <0x00100000 0x00000000>;
		};
	};
};
